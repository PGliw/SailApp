<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/centre_card"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/colorCardLight"
        android:layout_margin="10dp"
>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <ImageView
                android:id="@+id/imageView_centre_photo"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:contentDescription="@string/image_of_the_centre"
                android:src="@drawable/banner"
        />

        <TextView
                android:id="@+id/textView_centre_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text=""
                tools:text="Some name"
                android:textSize="24sp"
                android:textAlignment="center"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <RatingBar
                    android:id="@+id/ratingBar_centre"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:numStars="5"
                    android:isIndicator="true"
                    android:layout_gravity="start"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:rating="4.3"
                    android:progressTint="@color/colorPrimary"
            />

            <TextView
                    android:id="@+id/textView_opinions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    tools:text="XYZ opinions"
                    android:layout_gravity="center_vertical|end"
                    android:textSize="20sp"
                    android:textAlignment="textEnd"
                    android:layout_margin="5dp"
            />

        </LinearLayout>


        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
            <TextView
                    android:id="@+id/textView_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    tools:text="Some location"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:layout_weight="1"
            />
            <TextView
                    android:id="@+id/textView_distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    tools:text="21.2 km"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:layout_weight="2"
            />

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>