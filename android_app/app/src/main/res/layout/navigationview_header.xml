<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:background="@drawable/sail_nav_background"
>


    <TextView
            android:text="@string/ahoy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_ahoy"
            android:textSize="30sp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            tools:text="Piotr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_user_nav_name"
            android:textSize="30sp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_ahoy"
            app:layout_constraintEnd_toEndOf="@+id/textView_ahoy" android:textStyle="bold"
            android:layout_marginBottom="15dp" app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>