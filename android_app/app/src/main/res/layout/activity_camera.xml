<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.CameraActivity">

    <FrameLayout
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/photo_done"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/picture_taken_msg"
        android:visibility="invisible"
        android:contentDescription="@string/photo_done" />

    <ImageButton
        android:id="@+id/button_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_camera_alt_black_60dp"
        android:background="@color/colorPrimary"
        android:contentDescription="@string/take_a_photo" />

</androidx.constraintlayout.widget.ConstraintLayout>