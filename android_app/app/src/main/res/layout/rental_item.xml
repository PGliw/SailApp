<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/rental_card"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/colorCardLight"
        android:layout_margin="10dp"
>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <ImageView
                android:id="@+id/imageView_rental_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/banner"
                android:contentDescription="@string/image_of_the_renting_centre"
        />

        <TextView
                android:id="@+id/textView_rental_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text=""
                tools:text="Some name"
                android:textSize="24sp"
                android:textAlignment="center"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:text="@string/rental_date"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_margin="5dp"
            />

            <TextView
                    android:id="@+id/textView_rental_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    tools:text="DD.MM.YYYY"
                    android:layout_gravity="center_vertical|end"
                    android:textSize="20sp"
                    android:textAlignment="textEnd"
                    android:layout_margin="5dp"
            />

        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:text="@string/rental_start_time"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_margin="5dp"
            />

            <TextView
                    android:id="@+id/textView_rental_start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    tools:text="13:15"
                    android:layout_gravity="center_vertical|end"
                    android:textSize="20sp"
                    android:textAlignment="textEnd"
                    android:layout_margin="5dp"
            />

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:text="@string/rental_length"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_margin="5dp"
            />

            <TextView
                    android:id="@+id/textView_rental_length"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    tools:text="Some location"
                    android:layout_gravity="center_vertical|end"
                    android:textSize="20sp"
                    android:textAlignment="textEnd"
                    android:layout_margin="5dp"
            />

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:text="@string/rental_location"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_margin="5dp"
            />

            <TextView
                    android:id="@+id/textView_rental_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    tools:text="Some location"
                    android:layout_gravity="center_vertical|end"
                    android:textSize="20sp"
                    android:textAlignment="textEnd"
                    android:layout_margin="5dp"
            />

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>