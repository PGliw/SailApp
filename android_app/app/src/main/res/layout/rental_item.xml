<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/rental_card"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/colorCardLight"
        android:layout_margin="10dp"
>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:animateLayoutChanges="true"
    >

        <ImageView
                android:id="@+id/imageView_rental_photo"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:src="@drawable/banner"
                android:contentDescription="@string/image_of_the_renting_centre"
        />

        <TextView
                android:id="@+id/textView_rental_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text=""
                tools:text="Some name"
                android:textSize="24sp"
                android:textAlignment="center"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        >

            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:src="@drawable/ic_date_range_black" android:layout_weight="1"
                       android:contentDescription="@string/calendar"
                       android:layout_gravity="center"
                       android:id="@+id/imageView7" android:layout_marginBottom="8dp"
                       app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                       app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                       android:layout_marginStart="8dp"/>

            <TextView
                    android:id="@+id/textView_rental_date"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:text=""
                    tools:text="DD.MM.YYYY"
                    android:textSize="20sp"

                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/imageView7"
                    android:layout_marginStart="8dp"/>

            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:src="@drawable/ic_access_time_black"
                       android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                       android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintVertical_bias="1.0"
                       android:id="@+id/imageView8" android:layout_marginEnd="8dp"
                       app:layout_constraintEnd_toStartOf="@+id/textView_rental_start"
                       android:contentDescription="@string/clock"/>

            <TextView
                    android:id="@+id/textView_rental_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    tools:text="13:15"
                    android:textSize="20sp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.0" android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView android:layout_width="match_parent" android:layout_height="wrap_content"
                   android:src="@drawable/ic_keyboard_arrow_down_black"
                    android:padding="8dp"
                   android:contentDescription="@string/arrow_down"
                   android:id="@+id/imageView_arrow_down"
        />


        <LinearLayout
                android:id="@+id/linearLayout_extras"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible"
        >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:text="@string/rental_length"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_margin="5dp"
                />

                <TextView
                        android:id="@+id/textView_rental_length"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        tools:text="Some location"
                        android:layout_gravity="center_vertical|end"
                        android:textSize="20sp"
                        android:textAlignment="textEnd"
                        android:layout_margin="5dp"
                />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:text="@string/rental_location"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_margin="5dp"
                />

                <TextView
                        android:id="@+id/textView_rental_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        tools:text="Some location"
                        android:layout_gravity="center_vertical|end"
                        android:textSize="20sp"
                        android:textAlignment="textEnd"
                        android:layout_margin="5dp"
                />

            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp">
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/weather_icon_305"
                    android:layout_weight="2"
                           android:contentDescription="@string/weather_icon"/>
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:layout_weight="3">
                    <TextView
                            android:id="@+id/textView_temperature"
                            tools:text="19Â°C"
                            android:layout_width="match_parent" android:layout_height="wrap_content"
                            android:textAlignment="textEnd"
                            android:textSize="24sp"
                    />
                    <TextView
                            android:id="@+id/textView_wind"
                            tools:text="12.6 kph"
                            android:layout_width="match_parent" android:layout_height="wrap_content"
                            android:textAlignment="textEnd"
                            android:textSize="16sp"
                    />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout android:layout_width="match_parent" android:layout_height="80dp"
                          android:orientation="horizontal"
            >
                <ImageButton
                        android:id="@+id/imageButton_phone"
                        android:layout_width="match_parent" android:layout_height="match_parent"
                           android:src="@drawable/ic_phone_white"
                           android:background="@color/colorSuccess"
                            android:layout_weight="1"
                           android:padding="10dp"
                           android:contentDescription="@string/phone"/>

                <ImageButton
                        android:id="@+id/imageButton_location"
                        android:layout_width="match_parent" android:layout_height="match_parent"
                           android:src="@drawable/ic_location_on_white" android:layout_weight="1"
                           android:background="@color/colorInfo"
                           android:padding="20dp"
                           android:contentDescription="@string/location"/>

                <ImageButton
                        android:id="@+id/imageButton_cancel"
                        android:layout_width="match_parent" android:layout_height="match_parent"
                           android:src="@drawable/ic_cancel_black_24dp" android:layout_weight="1"
                           android:background="@color/colorError"
                           android:padding="10dp"
                           android:contentDescription="@string/cancel"/>

            </LinearLayout>

            <ImageView android:layout_width="match_parent" android:layout_height="wrap_content"
                       android:src="@drawable/ic_keyboard_arrow_up_black" android:contentDescription="@string/arrow_up"
                       android:padding="8dp"
                       android:id="@+id/imageView_arrow_up"
            />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>